<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_marginTop="5dp"
              android:gravity="center"
              android:layout_height="wrap_content">


    <android.support.v7.widget.AppCompatImageView android:layout_width="338dp" android:layout_height="143dp"
                                                  android:id="@+id/poster"
                                                  android:scaleType="centerCrop"
                                                  android:layout_gravity="center"
    />
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical"
    >
        <TextView android:layout_width="match_parent" android:layout_height="38dp"
                  android:text="Movie Title"
                  android:textSize="15dp"
                  android:id="@+id/movietitle"
                  android:textColor="@color/text_color"
                  android:textStyle="bold"
                  android:gravity="center"
        />
        <TextView android:layout_width="match_parent" android:layout_height="37dp"
                  android:textStyle="bold"
                  android:id="@+id/hindi"
                  android:textColor="@color/text_color"
                  android:textSize="15dp"
                  android:text="ReleaseDate"
                  android:gravity="center"
        />
        <TextView android:layout_width="match_parent" android:layout_height="42dp"
                  android:textStyle="bold"
                  android:id="@+id/rate"
                  android:textColor="@color/text_color"
                  android:textSize="15dp"
                  android:layout_gravity="center"
                  android:text="popularity"
                  android:gravity="center"
        />

        <android.support.v7.widget.CardView android:layout_width="278dp" android:layout_height="96dp"
                                            app:cardCornerRadius="15dp"
                                            android:layout_gravity="center"
                                            app:cardBackgroundColor="#CBCBDF"
                                            android:textColor="#1C2C53"
                                            android:gravity="center">
            <TextView android:layout_width="249dp"
                      android:layout_height="72dp"
                      android:id="@+id/textoverview"
                      android:layout_gravity="center"
                      android:textStyle="bold"
                      android:text="overview"
                      android:textSize="12dp"
                      android:gravity="center"
            />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.AppCompatButton
                android:text="Button"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="104dp"
                android:layout_height="38dp"
                android:id="@+id/btnDetails"/>




    </LinearLayout>
</LinearLayout>